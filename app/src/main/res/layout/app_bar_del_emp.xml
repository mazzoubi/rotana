<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Emppage">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/tit"
        android:layout_below="@+id/toolbar"
        android:weightSum="4"
        android:layout_margin="7dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:text="عرض حجوزات"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#000000"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:text="فاتورة"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#000000"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:text="مادة"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#000000"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:text="صنف"
            android:textSize="18dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:id="@+id/ca"
        android:layout_above="@+id/bt"
        android:elevation="15dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="مجموع الفاتورة : 0.0 دينار"
            android:textSize="24sp"
            android:padding="4dp"
            android:id="@+id/tot"
            android:background="@color/colorPrimary"
            android:textColor="#ffffff"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.CardView>

    <TextClock
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:format12Hour="dd/MM/yyyy a"
        android:layout_above="@+id/bt"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_marginRight="5dp"
        android:padding="4dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/shape2"
        android:textStyle="bold"
        android:layout_below="@+id/lalala"
        android:layout_height="wrap_content"/>

    <TextClock
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:textColor="@color/colorPrimary"
        android:padding="4dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/shape2"
        android:format12Hour="hh:mm:ss a"
        android:layout_above="@+id/bt"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@+id/lalala"
        android:layout_height="wrap_content"/>

    <include layout="@layout/activity_casher"
        android:layout_height="match_parent"
        android:id="@+id/lalala"
        android:layout_width="match_parent"
        android:layout_above="@+id/ca"
        android:layout_below="@+id/tit"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/bt"
        android:layout_alignParentBottom="true"
        android:weightSum="8"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:layout_margin="2dp"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="wrap_content"
            android:id="@+id/btn9"
            android:text="إغلاق كاش"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:layout_margin="2dp"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="wrap_content"
            android:id="@+id/btn7"
            android:text="مصروفات"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:background="@drawable/shape"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="wrap_content"
            android:id="@+id/btn6"
            android:text="حذف/إضافة صنف"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginBottom="15dp"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/btn4"
            android:text="الصالة"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:id="@+id/btn3"
            android:text="طلبات توصيل"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/colorPrimaryDark"
            android:layout_margin="2dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn2"
            android:text="طلبات سفري"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/shape"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/btn5"
            android:text="دفع"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/shape"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/colorPrimaryDark"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/btn"
            android:text="كاش"/>

    </LinearLayout>

</RelativeLayout>