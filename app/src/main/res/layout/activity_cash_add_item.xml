<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cashAddItem">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        app:title="Go Back"
        android:id="@+id/tool"
        app:titleTextColor="@color/colorPrimaryDark"
        android:layout_height="40dp"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_below="@+id/tool"
        android:layout_margin="25dp"
        android:elevation="35dp"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/itemSubItem"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:textSize="18sp"
                    android:background="@drawable/shape2"
                    android:gravity="center"
                    android:hint="Item name"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/itemPrice"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="18sp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape2"
                    android:gravity="center"
                    android:hint="Item price"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/itemCost"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="@drawable/shape2"
                    android:hint="Item cost"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/itemPoint"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:textSize="18sp"
                    android:hint="point"
                    android:background="@drawable/shape2"
                    android:gravity="center"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/kitchenNo"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/shape2"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:hint="kitchen no#"
                    android:inputType="textPersonName" />

                <CheckBox
                    android:id="@+id/itemCheckBox"
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="New rating item?" />

                <Spinner
                    android:id="@+id/spinner_correntItem"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/fui_idp_button_background_anonymous" />

                <EditText
                    android:id="@+id/itemNewItem"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/shape2"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:hint="New item name"
                    android:inputType="textPersonName" />

                <Button
                    android:id="@+id/buttonItemAdd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_marginTop="15dp"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    android:layout_marginBottom="5dp"
                    android:text="Add" />

            </LinearLayout>
        </ScrollView>

    </android.support.v7.widget.CardView>

</RelativeLayout>