<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/shape3"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:text="مجموع الفاتورة"
            android:id="@+id/title"
            android:layout_centerHorizontal="true"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="الباقي : "
            android:id="@+id/change"
            android:layout_centerHorizontal="true"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_below="@+id/pay"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content" />

        <AutoCompleteTextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:gravity="center"
            android:textStyle="bold"
            android:ems="10"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:completionThreshold="3"
            android:imeOptions="actionSearch"
            android:fontFamily="serif"
            android:hint="بريد إلكتروني"
            android:textColorHint="@color/colorPrimary"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/shape2"
            android:padding="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:hint="نقاط الحساب"
            android:id="@+id/po"
            android:textColorHint="@color/colorPrimary"
            android:background="@drawable/shape2"
            android:singleLine="true"
            android:layout_below="@+id/email"
            android:layout_centerHorizontal="true"
            android:textSize="24dp"
            android:inputType="number"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="10dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorPrimary"
            android:layout_height="50dp" />

        <Button
            android:layout_width="match_parent"
            android:text="بحث"
            android:id="@+id/sea"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="24dp"
            android:background="@drawable/shape"
            android:backgroundTint="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:padding="15dp"
            android:layout_below="@+id/po"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="match_parent"
            android:hint="المدفوع "
            android:id="@+id/pay"
            android:textColorHint="@color/colorPrimary"
            android:background="@drawable/shape2"
            android:singleLine="true"
            android:layout_below="@+id/email"
            android:layout_centerHorizontal="true"
            android:textSize="24dp"
            android:inputType="number"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="10dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="150dp"
            android:textColor="@color/colorPrimary"
            android:layout_height="50dp" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_marginLeft="15dp"
           android:layout_marginTop="15dp"
           android:layout_marginRight="15dp"
           android:weightSum="2"
           android:layout_marginBottom="15dp"
           android:layout_below="@+id/change"
           android:layout_centerHorizontal="true"
           android:layout_height="wrap_content">

           <Button
               android:layout_width="match_parent"
               android:text="دفع كاش"
               android:id="@+id/delivaa"
               android:textSize="24dp"
               android:background="@drawable/shape"
               android:layout_weight="1"
               android:layout_marginRight="15dp"
               android:backgroundTint="@color/colorPrimary"
               android:textStyle="bold"
               android:padding="15dp"
               android:textColor="@color/colorPrimaryDark"
               android:layout_height="wrap_content" />

           <Button
               android:layout_width="match_parent"
               android:text="دفع نقاط"
               android:id="@+id/poinaa"
               android:layout_marginLeft="15dp"
               android:textSize="24dp"
               android:background="@drawable/shape"
               android:layout_weight="1"
               android:backgroundTint="@color/colorPrimary"
               android:textStyle="bold"
               android:padding="15dp"
               android:textColor="@color/colorPrimaryDark"
               android:layout_height="wrap_content" />


       </LinearLayout>

    </RelativeLayout>

</ScrollView>